    %br
  .payment_status
    Payment status:
    =$order->payment_status
    %br
    %br
  .payment_actions
    -if($order->payment_status != 'completed' && $order->payment_status != 'completed_by_check')
      %a.btn.btn-primary(href="#{$this->createUrl('orders/changePaymentStatus',['orderId'=> $order->id,'status'=>'completed_by_check']);}")
        Completed by check
    -if($order->payment_status == 'completed_by_check')
      %a.btn.btn-primary(href="#{$this->createUrl('orders/changePaymentStatus',['orderId'=> $order->id,'status'=>'pending']);}")
        Revoke check
