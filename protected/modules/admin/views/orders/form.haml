  - foreach ($order->studentSeminars as $studentSeminar)
    .seminar_edit_block
      %label Seminar
      %div =$studentSeminar->seminar->title
      %br
      -#= $form->dropDownListRow($studentSeminar, 'seminar', CHtml::listData(Seminar::model()->findAllByAttributes(['type' => 'summer']), 'id', 'title'), ['name' => 'StudentSeminars['.$studentSeminar->id.'][seminar]', 'class' => 'edit_seminar']);
